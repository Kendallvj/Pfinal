@model Finalpro.Models.Tratamientos

<h1>Editar Tratamiento</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="IdTratamiento" />

    <div class="form-group">
        <label>Fecha de Inicio</label>
        <input type="date" class="form-control" asp-for="FechaInicio" />
    </div>
    <div class="form-group">
        <label>Descripción del Tratamiento</label>
        <input type="text" class="form-control" asp-for="DescripTratamiento" />
    </div>
    

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>
