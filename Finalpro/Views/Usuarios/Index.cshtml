@model IEnumerable<Finalpro.Models.usuarios>

<h1>Listado de Usuarios</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Usuario</th>
            <th>Contraseña</th>
            <th>Fecha de Creación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.IdUsuario</td>
                <td>@usuario.Usuario</td>
                <td>@usuario.Contraseña</td>
                <td>@usuario.FechaCreacion.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@usuario.IdUsuario">Detalles</a> |
                    <a asp-action="Edit" asp-route-id="@usuario.IdUsuario">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@usuario.IdUsuario">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
